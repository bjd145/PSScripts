<Deployment>
    <Parameters>
        <APP>WGC</APP>
        <Version>3.5</Version>
        <Build>8</Build>
        <MasterDeployLocation>D:\Temp\TAX-CEA-1.0.25-inc-20140116\PROD</MasterDeployLocation>
        <Environment>DEV</Environment>
    </Parameters>
    <Steps> <!-- Source Paths are Relative to MasterDeployLocation -->
        <step>
            <ScriptBlock>Deploy-Solutions</ScriptBlock>
            <Source>TAX</Source>
            <Url>http://mytaxsymphony-local.gt.com</Url>
        </step>
        <step>
            <ScriptBlock>Deploy-Solutions</ScriptBlock>
            <Source>CEA</Source>
            <Url>http://cea-local.gt.com</Url>
        </step>
        <step> 
            <ScriptBlock>Deploy-Config</ScriptBlock>
            <Url>http://mytaxsymphony-local.gt.com</Url>
        </step>
        <step>
            <ScriptBlock>Enable-Features</ScriptBlock>
            <Url>http://cea-local.gt.com</Url>
        </step>
        <step>
            <ScriptBlock>Install-MSIFile</ScriptBlock>
            <Source>MSI</Source>
        </step>
        <step> 
            <ScriptBlock>Uninstall-MSIFile</ScriptBlock>
            <Source>MSI</Source>
        </step>
        <step> 
            <ScriptBlock>Sync-Files</ScriptBlock>
            <Source>TSCEA</Source>
            <DestinationPath>D:\Web\tscea-local.gt.com</DestinationPath> <!-- Must be full path as if on the server. Example - D:\Web\WebSite\Path -->
            <DestinationServers>Server-A,Server-B</DestinationServers> <!-- List of Servers Separated By a Comma -->
        </step>
        <step> 
            <ScriptBlock>DeployTo-GAC</ScriptBlock>
            <Source>TAX</Source>
        </step>
        <step> 
            <ScriptBlock>Cycle-IIS</ScriptBlock>
        </step>
        <step> 
            <ScriptBlock>Cycle-Timer</ScriptBlock>
        </step>
        <step> 
            <ScriptBlock>Deploy-SSRSReport</ScriptBlock>
            <Source>CEA</Source>
            <ReportFolder>CEAReports/Systems</ReportFolder>
        </step>
        <step> 
            <ScriptBlock>Execute-ManualScriptBlock</ScriptBlock>
            <Source>manual_steps.ps1</Source>
        </step>      
    </Steps>
</Deployment>